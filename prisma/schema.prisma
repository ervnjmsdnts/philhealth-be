generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  RECIEVED
  NOT_RECEIVED
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  password  String
  code      String
  createdAt DateTime @default(now())
}

model Facility {
  id            Int      @id @default(autoincrement())
  licenceNumber String
  name          String
  level         String
  address       String
  contactNumber String
  email         String
  sendDate      Int?
  receivedDate  Int?
  status        Status   @default(NOT_RECEIVED)
  dateClaimed   Int?
  createdAt     DateTime @default(now())
}

model HealthCare {
  id             Int      @id @default(autoincrement())
  licenceNumber  String
  name           String
  specialization String
  address        String
  contactNumber  String
  email          String
  sendDate       Int?
  receivedDate   Int?
  status         Status   @default(NOT_RECEIVED)
  dateClaimed    Int?
  createdAt      DateTime @default(now())
}
